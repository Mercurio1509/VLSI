* inv.sp
*----------------------------------------------------------------------
* Parameters and models
*----------------------------------------------------------------------
.param SUPPLY=1.8
.lib '/mnt/vol_NFS_rh003/Est_VLSI_I_2024/Leiva_Solano_I_2024_vlsi/tutorial/Hspice/lp5mos/xt018.lib' tm
.lib '/mnt/vol_NFS_rh003/Est_VLSI_I_2024/Leiva_Solano_I_2024_vlsi/tutorial/Hspice/lp5mos/param.lib' 3s
.lib '/mnt/vol_NFS_rh003/Est_VLSI_I_2024/Leiva_Solano_I_2024_vlsi/tutorial/Hspice/lp5mos/config.lib' default
*.temp 70
.option post
*----------------------------------------------------------------------
* Simulation netlist
*----------------------------------------------------------------------
Vdd vdd gnd 'SUPPLY'
Vin a gnd PULSE 0 'SUPPLY' 50ps 0ps 0ps 100ps 200ps
xm1 y a gnd gnd ne W=220n L=180n
+ AS=20 PS=18 AD=20 PD=18
xm2 y a vdd vdd pe W=440n L=180n
+ AS=40 PS=26 AD=40 PD=26
*----------------------------------------------------------------------
* Stimulus
*----------------------------------------------------------------------
.tran 1ps 200ps
.measure tpdr * rising prop delay
+ TRIG v(y) VAL='SUPPLY/2' FALL=1 
+ TARG v(a) VAL='SUPPLY/2' RISE=1
.measure tpdf * falling prop delay
+ TRIG v(a) VAL='SUPPLY/2' RISE=1
+ TARG v(y) VAL='SUPPLY/2' FALL=1 
.measure tpd param='(tpdr+tpdf)/2'
.end
